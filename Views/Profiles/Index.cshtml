@model EmployeesManagment.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Assign User Role";
}
<div class="card">
    <div class="mb-3 float-end">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-file-plus-fill"></i> Assign User Role</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="AssignRights">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RoleId" class="control-label"></label>
                                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
                                    <option value="">-- Select Role --</option>
                                </select>
                                <span asp-validation-for="RoleId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TaskId" class="control-label"></label>
                                <select asp-for="TaskId" class="form-control" asp-items="ViewBag.Tasks">
                                    <option value="">-- Select Task --</option>
                                </select>
                                <span asp-validation-for="TaskId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group mt-3 ms-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-plus"></i> Assign Rights
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
