@model EmployeesManagment.Models.LeaveAdjustmentEntry

@{
    ViewData["Title"] = "Add New Leave Adjusment";
}

<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="card border-top border-0 border-4 border-info">
            <div class="card-body">
                <div class="border p-4 rouded">
                    <div class="card-title d-flex align-items-counter">
                        <div>
                            <i class="bx bxs-user me-1 font-22 text-info"></i>
                        </div>
                        <h5 class="mb-0 text-info"> Add New Leave Adjusment</h5>
                    </div><br />

                    <div class="col-md-12">
                        <form asp-action="Create">
                            <div class="row g-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="LeavePeriod" class="control-label"></label>
                                    <input asp-for="LeavePeriod" class="form-control" />
                                    <span asp-validation-for="LeavePeriod" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="EmployeeId" class="control-label"></label>
                                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NoOfDays" class="control-label"></label>
                                    <input asp-for="NoOfDays" class="form-control" />
                                    <span asp-validation-for="NoOfDays" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LeaveAdjusmentDate" class="control-label"></label>
                                    <input asp-for="LeaveAdjusmentDate" type="date" class="form-control" />
                                    <span asp-validation-for="LeaveAdjusmentDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LeaveStartDate" class="control-label"></label>
                                    <input asp-for="LeaveStartDate" type="date" class="form-control" />
                                    <span asp-validation-for="LeaveStartDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LeaveEndDate" class="control-label"></label>
                                    <input asp-for="LeaveEndDate" type="date" class="form-control" />
                                    <span asp-validation-for="LeaveEndDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AdjustmentDescription" class="control-label"></label>
                                    <input asp-for="AdjustmentDescription" class="form-control" />
                                    <span asp-validation-for="AdjustmentDescription" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="AdjustmentTypeId" class="control-label"></label>
                                    <select asp-for="AdjustmentTypeId" class="form-control" asp-items="ViewBag.AdjustmentTypeId"></select>
                                </div>
                                <div class="form-group">
                                    <a asp-action="Index" class="btn btn-warning float-start">Back to List</a>
                                    <input type="submit" value="Adjust Leave" class="btn btn-primary float-end" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
