@model EmployeesManagment.Models.ApprovalsUserMatrix

@{
    ViewData["Title"] = "Add New Approval User Matrix";
}

<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="card border-top border-0 border-4 border-info">
            <div class="card-body">
                <div class="border p-4 rouded">
                    <div class="card-title d-flex align-items-counter">
                        <div>
                            <i class="bx bxs-user me-1 font-22 text-info"></i>
                        </div>
                        <h5 class="mb-0 text-info"> Add New Approval User Matrix</h5>
                    </div><br />
                    <div class="col-md-12">
                        <form asp-action="Create">
                            <div class="row g-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="UserId" class="control-label"></label>
                                            <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="DocumentTypeId" class="control-label"></label>
                                            <select asp-for="DocumentTypeId" class="form-control" asp-items="ViewBag.DocumentTypeId"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="workFlowUserGroupId" class="control-label"></label>
                                            <select asp-for="workFlowUserGroupId" class="form-control" asp-items="ViewBag.workFlowUserGroupId"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                                            </label>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <a asp-action="Index" class="btn btn-warning float-start">Back to List</a>
                                    <input type="submit" value="Register Matrix" class="btn btn-primary float-end" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
