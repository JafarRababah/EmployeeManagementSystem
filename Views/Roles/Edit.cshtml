@model EmployeesManagment.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "Update Role";
}

<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="card border-top border-0 border-4 border-info">
            <div class="card-body">
                <div class="border p-4 rouded">
                    <div class="card-title d-flex align-items-counter">
                        <div>
                            <i class="bx bxs-user me-1 font-22 text-info"></i>
                        </div>
                        <h5 class="mb-0 text-info"> Update Role</h5>
                    </div><br />

                    <div class="col-md-12">
