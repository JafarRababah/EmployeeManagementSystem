                            <div class="form-group">
                                <label asp-for="RoleName" class="control-label"></label>
                                            <input asp-for="RoleName" class="form-control" asp-items=" ViewBag.Id" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                        </div>


                    </div>
                                <div class="form-group">
                                    <a asp-action="Index" class="btn btn-warning float-start"><i class="bi bi-skip-backward-fill"></i> Back to List</a>
                                    <button type="submit" class="btn btn-primary float-end"><i class="bi bi-floppy-fill"></i> Save</button>
                                </div>
                    </div>
                </form>
            </div>
        </div>
            </div>
        </div>
        
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
