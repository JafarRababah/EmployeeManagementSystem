@model EmployeesManagment.Models.LeaveType

@{
    ViewData["Title"] = "Update Leave Type";
}

<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="card border-top border-0 border-4 border-info">
            <div class="card-body">
                <div class="border p-4 rouded">
                    <div class="card-title d-flex align-items-counter">
                        <div>
                            <i class="bx bxs-user me-1 font-22 text-info"></i>
                        </div>
                        <h5 class="mb-0 text-info"> Update Leave Type</h5>
                    </div><br />
                    <div class="col-md-12">
                        <form asp-action="Edit">
                            <div class="row g-3">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="CreatedById" />
                                <input type="hidden" asp-for="CreatedOn" />
                                <div class="form-group col-md-6">
                                    <label asp-for="Code" class="control-label"></label>
                                    <input asp-for="Code" class="form-control" />
