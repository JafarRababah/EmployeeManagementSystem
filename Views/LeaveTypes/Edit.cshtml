                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Days" class="control-label"></label>
                                    <input asp-for="Days" class="form-control" />
                                    <span asp-validation-for="Days" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <a asp-action="Index" class="btn btn-warning float-start"><i class="bi bi-skip-backward-fill"></i> Back to List</a>
                                    <button type="submit" class="btn btn-primary float-end"><i class="bi bi-floppy-fill"></i> Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
                

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
