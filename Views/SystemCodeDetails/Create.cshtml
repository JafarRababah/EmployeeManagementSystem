@model EmployeesManagment.Models.SystemCodeDetail

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12 mx-auto">
        <div class="card border-top border-0 border-4 border-info">
            <div class="card-body">
                <div class="border p-4 rouded">
                    <div class="card-title d-flex align-items-counter">
                        <div>
                            <i class="bx bxs-user me-1 font-22 text-info"></i>
                        </div>
                        <h5 class="mb-0 text-info"> Add New System Code Detail</h5>
                    </div>             
                <div class="row g-3">
                        <div class="col-md-12">
                    
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="SystemCodeId" class="control-label"></label>
                                            <select asp-for="SystemCodeId" class="form-control" asp-items="ViewBag.SystemCodeId"></select>
                                            <span asp-validation-for="SystemCodeId" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Code" class="control-label"></label>
                                            <input asp-for="Code" class="form-control" />
                                            <span asp-validation-for="Code" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="Description" class="control-label"></label>
                                            <input asp-for="Description" class="form-control" />
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label asp-for="OrderNo" class="control-label"></label>
                                            <input asp-for="OrderNo" class="form-control" />
                                            <span asp-validation-for="OrderNo" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <a asp-action="Index" class="btn btn-warning float-start">Back to List</a>
                                    <input type="submit" value="Register System Code Detail" class="btn btn-primary float-end" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
